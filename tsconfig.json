{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2020",
		"lib": ["es2020"],
		"outDir": "out",
		"sourceMap": true,
    "esModuleInterop": true,
		"strict": true,
		"rootDir": "./src",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true
	},
  "include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules", ".vscode-test", "out", "dist", "resources"]
}
